# shellcheck shell=sh

# DON'T RUN THIS LIKE AN ACTUAL SHELL SCRIPT!
# SELECT THE RELEVANT BITS AND RUN THEM FROM THE COMMAND LINE

#
# Mac
#
# get from https://store.docker.com/editions/community/docker-ce-desktop-mac
# Don't start on login (?)

#
# Ubuntu
#
umask 022
sudo apt-get remove docker docker-engine docker.io
sudo apt-get update
sudo apt-get install \
    apt-transport-https \
    ca-certificates \
    curl \
    software-properties-common
curl -fsSL https://download.docker.com/linux/ubuntu/gpg | sudo apt-key add -
sudo apt-key fingerprint 0EBFCD88
sudo add-apt-repository \
   "deb [arch=amd64] https://download.docker.com/linux/ubuntu \
   $(lsb_release -cs) \
   stable"
sudo apt-get update
sudo apt-get install docker-ce
# skip if running under a non-root user
#sudo docker run hello-world
sudo groupadd docker
sudo usermod -aG docker "$USER"
docker run hello-world
sudo systemctl enable docker
